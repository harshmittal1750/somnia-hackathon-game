{
    "name": "somnia-space-defender",
    "version": "1.0.0",
    "description": "An addictive 2D space shooter game with Web3 integration for the Somnia Hackathon",
    "main": "index.html",
    "scripts": {
        "start": "npx serve .",
        "dev": "npx serve . --cors",
        "deploy:contract": "npx hardhat run scripts/deploy.js --network somnia",
        "compile": "npx hardhat compile",
        "test": "npx hardhat test",
        "verify": "npx hardhat verify --network somnia",
        "build": "echo 'No build step needed for vanilla JS' && exit 0"
    },
    "keywords": [
        "game",
        "web3",
        "blockchain",
        "somnia",
        "space-shooter",
        "2d-game",
        "hackathon"
    ],
    "author": "Somnia Hackathon Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/harshmittal1750/somnia-hackathon-game.git"
    },
    "bugs": {
        "url": "https://github.com/harshmittal1750/somnia-hackathon-game/issues"
    },
    "homepage": "https://github.com/harshmittal1750/somnia-hackathon-game#readme",
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.2.3",
        "@nomiclabs/hardhat-waffle": "^2.0.6",
        "chai": "^4.3.10",
        "dotenv": "^17.2.1",
        "ethereum-waffle": "^4.0.10",
        "ethers": "^5.7.2",
        "hardhat": "^2.19.0"
    },
    "dependencies": {
        "web3": "^4.3.0"
    },
